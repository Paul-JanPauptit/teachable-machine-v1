.intro {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%
	height: 100%
	font-family: $font;
	padding: 40px;
}

.intro-title {
	font-size: 150px;
	font-family: $titleFont;
    color: $color__black;
	margin-top: 20px;
    margin-bottom: 60px;
}

.intro-text {
    font-size: 40px;
    color: $color__black;
	padding: 0 10%;
	margin-bottom: 60px;
}

.intro-text-start {
    font-size: 40px;
	color: $color__black;
	margin-bottom: 14px;
}

.intro-text-start-small {
	font-size: 30px;
	color: $color__black;
	margin-bottom: 100px;
}

.intro-buttons {
	display: grid;
	grid-template-columns: min-content min-content min-content;
	grid-column-gap: 32px;
	justify-content: center;
}

.intro-start-button {
    font-size: 34px;
	font-family: $font;
	color: $color__white;
	background-color: $color__black;
	padding: 25px;
	border-radius: 100%;
	pointer: cursor;
}

.intro-start-button:active {
  opacity: 0.7;
  transform: scale(0.9);      
}

